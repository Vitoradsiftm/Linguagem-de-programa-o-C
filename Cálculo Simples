#include <stdio.h>

int main() {
   int a, b, c, d;
   double e, f, pagar;
   
   // Leitura dos dados da peça 1
   scanf("%d %d %lf", &a, &b, &e);

   // Leitura dos dados da peça 2
   scanf("%d %d %lf", &c, &d, &f);
   
   // Cálculo do valor total a pagar
   pagar = (b * e) + (d * f);
   
   // Impressão do resultado com 2 casas decimais
   printf("VALOR A PAGAR: R$ %.2lf\n", pagar);

   return 0;
}
