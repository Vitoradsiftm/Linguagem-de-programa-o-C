#include <stdio.h>

int main() {
    int n, o, f; 

    while (1) {
        scanf("%d", &n); 
        
        
        if (n == 0) {
            break;
        }
        
        
        int pntsog = 0, pntsfilho = 0;

        
        for (int i = 0; i < n; i++) {
            scanf("%d %d", &o, &f); 

            if (o < f) {
                pntsfilho = pntsfilho + 1; 
            } else if (o > f) {
                pntsog = pntsog + 1; 
            }
           
        }

        
        printf("%d %d\n", pntsog, pntsfilho);
    }

    return 0;
}
